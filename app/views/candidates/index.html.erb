<h1>Candidates</h1>

<table class="table table-striped table-bordered table-hover border-primary">
   <thead>
      <tr>
         <th>Full name</th>
         <th>Gender</th>
         <th>Age</th>
         <th>Speciality</th>
         <th>Work experience</th>
         <th colspan="3"></th>
      </tr>
   </thead>

   <tbody">
   <% @candidates.each do |candidate| %>
   <tr>
      <td><%=candidate.full_name %></td>
      <td><%=candidate.gender %></td>
      <td><%=candidate.age %></td>
      <td><%=candidate.speciality %></td>
      <td><%=candidate.work_experience %></td>
      <td><%= link_to 'Show', candidate%></td>
      <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
      <td><%= link_to 'Destroy', candidate, method: :delete,
         data: { confirm: 'Are you sure?' } %></td>
   </tr>
   <% end %>
   </tbody>
</table>
<br/>

<%= link_to "New candidate", new_candidate_path, class: "btn btn-primary"%>
